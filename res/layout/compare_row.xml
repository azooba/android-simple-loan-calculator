<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/compareTypeData"
            style="@style/Compare.Data"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/compareAmountData"
            style="@style/Compare.Data"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/compareInterestData"
            style="@style/Compare.Data"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/compareEffectiveInterestData"
            style="@style/Compare.Data"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/comparePeriodData"
            style="@style/Compare.Data"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/comparePaymentMaxData"
            style="@style/Compare.Data"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/comparePaymentMinData"
            style="@style/Compare.Data"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/compareDownPaymentData"
            style="@style/Compare.Data"/>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/compareResidueData"
            style="@style/Compare.Data"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/compareInterestTotalData"
            style="@style/Compare.Data"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/compareAmountTotalData"
            style="@style/Compare.Data"/>
    <LinearLayout  android:layout_width="fill_parent"
                   android:layout_height="wrap_content" android:orientation="vertical"
                   android:gravity="center_horizontal">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text=""
                android:gravity="center"
                android:id="@+id/compareRemoveLoan"
                style="@style/Compare.Empty"
                android:background="@drawable/ic_close"
                android:clickable="true"/>
    </LinearLayout>
</LinearLayout>