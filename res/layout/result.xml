<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView android:id="@+id/mainScrollView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent" android:padding="15dp">


            <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:stretchColumns="*"
                    android:id="@+id/resultInputLoanData"
                    android:background="@drawable/roundedshape">
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/amount"
                            android:id="@+id/resultAmount"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:id="@+id/resultAmountValue"/>
                </TableRow>
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nominalInterestLbl"
                            android:id="@+id/resultInterest"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:id="@+id/resultInterestValue"/>
                </TableRow>
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/period"
                            android:id="@+id/resultPeriod"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:id="@+id/resultPeriodValue"/>
                </TableRow>
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/downPayment"
                            android:id="@+id/resultDownPayment"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:id="@+id/resultDownPaymentValue"/>
                </TableRow>
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/residue"
                            android:id="@+id/resultResidue"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:id="@+id/resultResidueValue"/>
                </TableRow>
            </TableLayout>


            <TextView android:text="@string/MonthlyAmountLbl"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/Result.Label"/>
            <TextView android:id="@+id/resultMonthlyPaymentText"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="0.00"
                      style="@style/Result.Value"/>

            <View android:layout_width="fill_parent" android:layout_height="1dp"
                  android:background="@color/Separator.Color"/>

            <TextView android:text="@string/effectiveInterestLbl"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/Result.Label"/>


            <TextView android:id="@+id/effectiveInterestText"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="0.00"
                      style="@style/Result.Value"/>


            <View android:layout_width="fill_parent" android:layout_height="1dp"
                  android:background="@color/Separator.Color"/>

            <TextView android:text="@string/IterestTotalLbl"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/Result.Label"/>
            <TextView android:id="@+id/resultIterestTotalText"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="0.00"
                      style="@style/Result.Value"/>

            <View android:layout_width="fill_parent" android:layout_height="1dp"
                  android:background="@color/Separator.Color"/>

            <TextView android:text="@string/commissionTotalLabel"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"

                      style="@style/Result.Label"/>
            <TextView android:id="@+id/resultCommissionsTotalText"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="0.00"
                      style="@style/Result.Value"/>
            <View android:layout_width="fill_parent" android:layout_height="1dp"
                  android:background="@color/Separator.Color"/>


            <TextView android:text="@string/AmountTotalLbl"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/Result.Label"/>
            <TextView android:id="@+id/resultAmountTotalText"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="0.00"
                      style="@style/Result.Value"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

